<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textViewStyle">@style/AgrandirTextView</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="backgroundTint">@color/dark_russian_violet</item>
    </style>

    <style name="DefaultTextView">
        <item name="android:fontFamily">@font/prompt_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonTextView">
        <item name="android:fontFamily">@font/worksans_variablefont_wght</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AgrandirTextView">
        <item name="android:fontFamily">@font/agrandir_grand_heavy</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AgrandirTextViewSmall">
        <item name="android:fontFamily">@font/agrandir_grand_heavy</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gold_web_golden</item>
    </style>

</resources>